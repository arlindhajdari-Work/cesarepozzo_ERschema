{
  "tiddlers": [
    {
      "title": "Opportunity",
      "text": "Sales opportunity data",
      "tags": ["entity", "sales"],
      "fields": {
        "tmap.type": "node",
        "tmap.color": "#FF5733",
        "tmap.edges": "[{\"to\":\"Account\",\"type\":\"related-to\"},{\"to\":\"Contact\",\"type\":\"has-contact\"}]",
        "attributes": "potential_no|ID, potentialname|Name, amount|Value, closingdate|Close Date"
      }
    },
    {
      "title": "Account",
      "text": "Customer account information",
      "tags": ["entity", "customer"],
      "fields": {
        "tmap.type": "node",
        "tmap.color": "#33A1FF",
        "tmap.edges": "[]",
        "attributes": "account_no|ID, accountname|Name, phone|Phone, email1|Email"
      }
    },
    {
      "title": "Contact",
      "text": "Contact person details",
      "tags": ["entity", "person"],
      "fields": {
        "tmap.type": "node",
        "tmap.color": "#33FF57",
        "tmap.edges": "[{\"to\":\"Account\",\"type\":\"belongs-to\"}]",
        "attributes": "contact_no|ID, firstname|First Name, lastname|Last Name, email|Email"
      }
    }
  ]
}
